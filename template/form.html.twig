{% extends "main.html.twig" %}
{% block body %}
<form method="post" action="form.php">
	<table>
		<tr>
			<th>Imię postaci</th>
			<td><input type="text" name="Name" value="{{sheet.getName()}}" /></td>
		</tr>
		<tr>
			<th>Rasa</th>
			<td>
				<select name="race">
					<option value="1" {% if sheet.getRace().getId() == 1 %} selected="selected" {% endif %}>Człowiek</option> 
					<option value="2" {% if sheet.getRace().getId() == 2 %} selected="selected" {% endif %}>Krasnolud</option>
					<option value="3" {% if sheet.getRace().getId() == 3 %} selected="selected" {% endif %}>Elf</option>
				</select>
			</td>
		</tr>
		<tr>
			<th>Wygląd</th>
			<td><input type="text" name="appearance" value="{{sheet.getAppearance()}}"/></td>
		</tr>
		<tr>
			<th>Archetyp</th>
			<td><input type="text" name="archetype" value="{{sheet.getArchetype()}}"/></td>
		</tr>
		<tr>
			<th>Opis</th>
			<td><input type="text" name="description" value="{{sheet.getDescription()}}"/></td>
		</tr>
		<tr>
			<th>Doświadczenie</th>
			<td><input type="text" name="exp" value="{{sheet.getExp()}}"/></td>
		</tr>
		<tr>
			<th>Atrybuty <br>i umiejętności</th>
			<td>
				{% for attribute in attributes %}
				<b>{{attribute.getName()}}
					<input type="radio" name="attribute[{{attribute.getId()}}]" value="4" checked="checked" {% if sheet.getAttribute(attribute.getId()).getValue() == 4 %} checked="checked" {% endif %}> k4
					<input type="radio" name="attribute[{{attribute.getId()}}]" value="6" {% if sheet.getAttribute(attribute.getId()).getValue() == 6 %} checked="checked" {% endif %} >k6
					<input type="radio" name="attribute[{{attribute.getId()}}]" value="8" {% if sheet.getAttribute(attribute.getId()).getValue() == 8 %} checked="checked" {% endif %}>k8
					<input type="radio" name="attribute[{{attribute.getId()}}]" value="10" {% if sheet.getAttribute(attribute.getId()).getValue() == 10 %} checked="checked" {% endif %}>k10
					<input type="radio" name="attribute[{{attribute.getId()}}]" value="12" {% if sheet.getAttribute(attribute.getId()).getValue() == 12 %} checked="checked" {% endif %}>k12
					<input type="radio" name="attribute[{{attribute.getId()}}]" value="13" {% if sheet.getAttribute(attribute.getId()).getValue() == 13 %} checked="checked" {% endif %}>k12+1
					<input type="radio" name="attribute[{{attribute.getId()}}]" value="14" {% if sheet.getAttribute(attribute.getId()).getValue() == 14 %} checked="checked" {% endif %}>k12+2
					<input type="radio" name="attribute[{{attribute.getId()}}]" value="15" {% if sheet.getAttribute(attribute.getId()).getValue() == 15 %} checked="checked" {% endif %} >k12+3
				</b><br />

                {% for skill in skills %}
				{% if attribute.getId() == skill.getAttribute().getId() %}
				<i>{{skill.getName()}}
					<input type="radio" name="skills[{{skill.getId()}}]" value="0" checked="checked" {% if sheet.getSkill(skill.getId()).getValue() == 0 %} checked="checked" {% endif %} >niewyszkolony
					<input type="radio" name="skills[{{skill.getId()}}]" value="4" {% if sheet.getSkill(skill.getId()).getValue() == 4 %} checked="checked" {% endif %} >k4
					<input type="radio" name="skills[{{skill.getId()}}]" value="6" {% if sheet.getSkill(skill.getId()).getValue() == 6 %} checked="checked" {% endif %} >k6
					<input type="radio" name="skills[{{skill.getId()}}]" value="8" {% if sheet.getSkill(skill.getId()).getValue() == 8 %} checked="checked" {% endif %} >k8
					<input type="radio" name="skills[{{skill.getId()}}]" value="10" {% if sheet.getSkill(skill.getId()).getValue() == 10 %} checked="checked" {% endif %} >k10
					<input type="radio" name="skills[{{skill.getId()}}]" value="12" {% if sheet.getSkill(skill.getId()).getValue() == 12 %} checked="checked" {% endif %} >k12
					<input type="radio" name="skills[{{skill.getId()}}]" value="13" {% if sheet.getSkill(skill.getId()).getValue() == 13 %} checked="checked" {% endif %} >k12+1
					<input type="radio" name="skills[{{skill.getId()}}]" value="14" {% if sheet.getSkill(skill.getId()).getValue() == 14 %} checked="checked" {% endif %} >k12+2
					<input type="radio" name="skills[{{skill.getId()}}]" value="15" {% if sheet.getSkill(skill.getId()).getValue() == 15 %} checked="checked" {% endif %} >k12+3
				</i><br />
                {% endif %}
				{%endfor%}
				
				<br /><br />
				{%endfor%}

			</td>
		</tr>
		<tr>
			<th>Przewagi</th>
			<td>
            {% for edge in edges %}     
				<input type="checkbox" name="edges[]" value="{{edge.getId()}}" {% if sheet.getEdge(edge.getId()) %} checked="checked" {% endif %} /><b>{{edge.getName()}}</b>  <br>     
            {% endfor %}
			</td>
		</tr>
		<tr>
			<th>Zawady</th>
			<td>
			{% for hindrance in hindrances %}     
				<input type="checkbox" name="hindrances[]" value="{{hindrance.getId()}}"{% if sheet.getHindrance(hindrance.getId()) %} checked="checked" {% endif %} /><b>{{hindrance.getName()}}</b>  <br>     
            {% endfor %}  
			</td>
		</tr>
		<tr>
			<th>Moce</th>
			<td>
			{% for power in powers %}     
				<input type="checkbox" name="powers[]" value="{{power.getId()}}" {% if sheet.getPower(power.getId()) %} checked="checked" {% endif %} /><b>{{power.getName()}}</b>  <br>     
            {% endfor %}
			</td>
		</tr>
		<tr>
			<td colspan="2"><input type="submit" value="Zapisz" /></td>
		</tr>
	</table>
</form>
{% endblock %}